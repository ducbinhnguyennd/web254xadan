<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quét Mã Vạch</title>
    <script src="https://cdn.jsdelivr.net/npm/@ericblade/quagga2@latest/dist/quagga.min.js"></script>
    <style>
        #interactive {
            width: 100%;
            height: auto;
            position: relative;
        }
        
        #camera {
            width: 100%;
            height: auto;
            border: 1px solid #000;
        }
    </style>
</head>

<body>
    <div id="interactive">
        <div id="camera"></div>
    </div>
    <div id="result"></div>

    <script>
        // Khởi tạo QuaggaJS
        Quagga.init({
                inputStream: {
                    name: "Live",
                    type: "LiveStream",
                    target: document.querySelector('#camera'), // Chọn phần tử hiển thị camera
                },
                decoder: {
                    readers: [
                        "code_128_reader",
                        "ean_reader",
                        "ean_8_reader",
                        "upc_reader",
                        "code_39_reader",
                        "codabar_reader", // Thêm mã vạch Codabar
                        "code_39_vin_reader", // Thêm mã vạch Code 39 VIN
                        "itf_reader", // Thêm mã vạch ITF
                        "upc_e_reader" // Thêm mã vạch UPC-E
                    ]
                }
            },
            function(err) {
                if (err) {
                    console.error(err);
                    return;
                }
                console.log("QuaggaJS đã khởi tạo thành công!");
                Quagga.start(); // Bắt đầu quét
            });

        // Lắng nghe sự kiện khi quét thành công
        Quagga.onDetected(function(data) {
            document.getElementById('result').innerHTML = `
                <p>Mã vạch quét được: ${data.codeResult.code}</p>
                <p>Loại: ${data.codeResult.format}</p>
            `;
            // Dừng quét sau khi quét thành công
            Quagga.stop();
        });
    </script>
</body>

</html>