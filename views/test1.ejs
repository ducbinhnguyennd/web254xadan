<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barcode Scanner</title>
    <style>
        #reader {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="reader"></div>
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // Handle the scanned code as you like, for example:
            console.log(`Code matched = ${decodedText}`, decodedResult);
            alert(`Barcode detected: ${decodedText}`);
        }

        function onScanFailure(error) {
            // Handle scan failure, usually better to ignore and keep scanning.
            console.warn(`Code scan error = ${error}`);
        }

        let html5QrcodeScanner = new Html5QrcodeScanner(
            "reader", 
            { 
                fps: 10, 
                qrbox: { width: 300, height: 100 }, // Khung quét hình chữ nhật nằm ngang
                aspectRatio: 4 / 3 // Tăng độ phân giải camera, thiết lập tỷ lệ khung hình 4:3
            },
            /* verbose= */ false
        );
        
        // Tùy chọn constraints để tăng chất lượng camera
        const constraints = {
            video: {
                facingMode: "environment",
                width: { ideal: 1280 }, // Thiết lập độ phân giải video cao hơn
                height: { ideal: 720 }
            }
        };

        html5QrcodeScanner.render(onScanSuccess, onScanFailure, constraints);
    </script>
</body>
</html>
