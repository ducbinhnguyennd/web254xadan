<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barcode Scanner</title>
    <style>
        #reader {
            width: 100%;
            height: 100%;
            position: relative;
        }
        .qr-box {
            border: 4px solid white; /* Viền mặc định màu trắng */
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 300px;
            height: 100px;
        }
        .qr-box.success {
            border-color: green; /* Viền màu xanh lá cây khi quét thành công */
        }
    </style>
</head>
<body>
    <div id="reader">
        <div class="qr-box" id="qr-box"></div>
    </div>
    <audio id="beep-sound" src="https://www.soundjay.com/button/beep-07.wav" preload="auto"></audio>
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // Xử lý khi quét thành công
            console.log(`Code matched = ${decodedText}`, decodedResult);
            alert(`Barcode detected: ${decodedText}`);

            // Đổi viền khung quét thành màu xanh lá cây
            document.getElementById('qr-box').classList.add('success');

            // Phát âm thanh "bíp"
            document.getElementById('beep-sound').play();
        }

        function onScanFailure(error) {
            // Xử lý khi quét thất bại
            console.warn(`Code scan error = ${error}`);
        }

        const html5QrCode = new Html5Qrcode("reader");

        const qrCodeSuccessCallback = (decodedText, decodedResult) => {
            onScanSuccess(decodedText, decodedResult);
            // Dừng quét sau khi quét thành công
            html5QrCode.stop().then(ignore => {
                // QR code scanning is stopped.
            }).catch(err => {
                // Stop failed, handle it.
                console.error("Failed to stop scanning: ", err);
            });
        };

        const config = { fps: 10, qrbox: { width: 300, height: 100 } };
        
        // Tùy chọn constraints để tăng chất lượng camera
        const constraints = {
            video: {
                facingMode: "environment",
                width: { ideal: 1280 }, // Thiết lập độ phân giải video cao hơn
                height: { ideal: 720 }
            }
        };

        html5QrCode.start({ facingMode: "environment" }, config, qrCodeSuccessCallback)
        .catch(err => {
            // Start failed, handle it.
            console.error("Failed to start scanning: ", err);
        });
    </script>
</body>
</html>
