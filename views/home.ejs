<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="google-site-verification" content="w8EqMC0tywLwLb7tQHtpOo506Dl-99uo2BkzYLiPDxo" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ</title>
    <link rel="stylesheet" href="https://baominhmobile.com/bootstrap/css/bootstrap.min.css">

    <style>
        .container {
            /* background-color: bisque; */
            max-width: 1200px;
        }
        
        .icon {
            width: 30px;
        }
        
        .col-12 {
            text-align: center;
        }
        
        .btn {
            border-color: black;
        }
        
        .from {
            margin-top: 100px;
            border: 2px solid black;
        }
        
        .footer {
            margin-top: 50px;
            clear: both;
            max-width: 1500px;
            background-color: rgb(167, 166, 166);
            text-align: center;
            margin-left: 7px;
            font-size: 20px;
        }
        
        .img_sp {
            margin-top: 10px;
            width: 60px;
        }
        
        .dautich {
            width: 40px;
        }
        
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            text-align: center;
        }
        /* Định dạng cho nút tab */
        
        .tab button {
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
        }
        /* Thêm màu nền khi hover trên nút tab */
        
        .tab button:hover {
            background-color: #ddd;
        }
        /* Định dạng cho tab content */
        
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }
        /* Hiển thị tab content được chọn */
        
        .show {
            display: block;
        }
        
        .tablinks.active {
            background-color: #b1afaf;
            /* Đổi màu nền */
        }
        
        .dialog-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 20;
        }
        
        .dialog-content {
            margin-top: 10%;
            margin-left: auto;
            /* Đặt margin-left thành auto để canh giữa */
            margin-right: auto;
            /* Đặt margin-right thành auto để canh giữa */
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            max-width: 400px;
            text-align: center;
        }
        
        .dialog-buttons {
            margin-top: 2%;
        }
    </style>

</head>

<body>

    <div class="container">
        <h2 style="text-align: center;">Home</h2>
    </div>
    <div class="tab">
        <button class="tablinks active" onclick="openTab(event, 'Tab1')">Loại sản phẩm</button>
        <button class="tablinks" onclick="openTab(event, 'Tab2')">Blog</button>

    </div>
    <!-- Nội dung của tab -->
    <div id="Tab1" class="tabcontent show">
        <div class="col-sm-4 col-md-2">
            <a type="button" class="btn btn-danger" href="/addloaisp">
                ➕ Thêm loại sản phẩm
            </a>
        </div>
        <div class="col-1 col-sm-4 col-md-12">

            <table class="table table-bordered table-striped" style="text-align: center;">
                <tr>
                    <th>ID</th>
                    <th>Tên</th>

                    <th>Chức năng</th>
                </tr>

                <% listloai.forEach( ( row )=>{ %>

                    <tr>
                        <td>
                            <%= row._id%>
                        </td>
                        <td>
                            <a href="">
                                <%= row.name %>
                            </a>
                        </td>

                        <td>
                            <a href="/editloaisp/<%= row._id %>">
                                <button type="button" class="btn btn-light">Sửa</button>
                            </a>
                            <form action="/deleteloaisp/<%= row._id %>" method="post" id="deleteForm">
                                <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#deleteModal<%= row._id %>">
                                    Xóa
                                </button>

                                <div class="modal fade" id="deleteModal<%= row._id %>" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Chắc chắn muốn xóa?
                                                </h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                                                <button type="submit" class="btn btn-primary">Có</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <form action="/getchitietsp/<%= row._id %>" method="get">
                                <button type="submit" class="btn btn-light">Sản phẩm</button>
                            </form>
                        </td>

                    </tr>
                    <% } ) %>

            </table>

        </div>
    </div>

    <div id="Tab2" class="tabcontent">
        <div class="col-sm-4 col-md-2">
            <a type="button" class="btn btn-danger" href="/getaddblog">
                ➕ Thêm Blog
            </a>
        </div>
        <div class="col-1 col-sm-4 col-md-12">

            <table class="table table-bordered table-striped" style="text-align: center;">
                <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Ảnh</th>

                    <th></th>
                </tr>

                <% listblog.forEach((row)=> { %>
                    <tr>
                        <td>
                            <%= row._id %>
                        </td>
                        <td style="word-wrap: break-word">
                            <a href="/chitietblog/<%= row._id %>">
                                <%= row.tieude_blog %>
                            </a>
                        </td>
                        <td style="text-align: center;">
                            <img src="<%= row.img_blog %>" alt="" style="width: 80px; height: 80px;">
                        </td>
                        <td>
                            <a href="/editBlog/<%= row._id %>">
                                <button type="button" class="btn btn-light">Sửa</button>
                            </a>
                            <a href="/home/contentBlog/<%= row._id %>">
                                <button type="button" class="btn btn-light">Nội dung</button>
                            </a>

                            <form action="/home/deleteBlog/<%= row._id %>" method="post" id="deleteForm">
                                <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#deleteModal<%= row._id %>">
                                    Xóa
                                </button>

                                <div class="modal fade" id="deleteModal<%= row._id %>" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Chắc chắn muốn xóa?
                                                </h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                                                <button type="submit" class="btn btn-primary">Có</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </table>

        </div>
    </div>

    </div>
    <script>
        // JavaScript để điều khiển sự kiện khi click vào tab
        function openTab(evt, tabName) {
            // Lấy tất cả các tab buttons
            var tabButtons = document.getElementsByClassName("tablinks");

            // Xóa lớp active từ tất cả các tab buttons
            for (var i = 0; i < tabButtons.length; i++) {
                tabButtons[i].classList.remove("active");
            }

            // Thêm lớp active cho tab button được chọn
            evt.currentTarget.classList.add("active");

            // Ẩn tất cả các tab content
            var tabContents = document.getElementsByClassName("tabcontent");
            for (var i = 0; i < tabContents.length; i++) {
                tabContents[i].style.display = "none";
            }

            // Hiển thị tab content tương ứng với tab button được chọn
            document.getElementById(tabName).style.display = "block";
        }
    </script>
    <script src="https://baominhmobile.com/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>