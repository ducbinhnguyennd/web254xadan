<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QR Code Scanner</title>
    <script src="./qrScript.js"></script>
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: black;
        }
        
        #qr-reader {
            width: 100vw;
            height: 100vh;
            position: relative;
        }
        
        .qr-box {
            position: absolute;
            border: 2px dashed red;
            /* Đường viền cho vùng quét */
            width: 300px;
            height: 300px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        
        .scan-line {
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            height: 2px;
            background-color: red;
            /* Màu đường kẻ */
        }
        
        #result {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            font-size: 1.5rem;
            color: white;
        }
    </style>
</head>

<body>
    <div id="qr-reader">
        <div class="qr-box"></div>
        <!-- Khung vùng quét -->
        <div class="scan-line"></div>
        <!-- Đường kẻ quét -->
    </div>
    <div id="result"></div>


    <script>
        function onScanSuccess(decodedText, decodedResult) {
            if (decodedText) {
                document.getElementById('result').innerHTML = `<p>Code scanned = ${decodedText},${decodedResult}</p>`
                document.getElementById('qr-reader').style.display = 'none'
                html5Qrcode.stop()
            }

        }
        var html5Qrcode = new Html5Qrcode("qr-reader");
        const config = {
            fps: 30,
            qrbox: {
                width: 300,
                height: 150
            }

        }
        html5Qrcode.start({
            facingMode: {
                exact: "environment" // Sử dụng camera sau
            },
            config,
            onScanSuccess
        });
    </script>
</body>

</html>