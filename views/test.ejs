<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>GIA HUY MOBILE - 254 XÃ ĐÀN</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="http://localhost:3000/lib/animate/animate.min.css" rel="stylesheet">
    <link href="http://localhost:3000/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="http://localhost:3000/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Navbar Start -->
    <div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                    <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>THỂ LOẠI</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                        <% allsp.forEach((row, index)=> { %>
                            <a href="" class="nav-item nav-link">
                                <%= row.name %>
                            </a>
                            <% }) %>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <span class="h1 text-uppercase text-dark bg-light px-2">Multi</span>
                        <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="/" class="nav-item nav-link active">TRANG CHỦ</a>
                            <a href="/" class="nav-item nav-link">SỬA CHỮA</a>
                            <a href="/" class="nav-item nav-link">SẢN PHẨM</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">THÔNG TIN <i class="fa fa-angle-down mt-1"></i></a>
                                <div class="dropdown-menu bg-primary1 rounded-0 border-0 m-0">
                                    <a href="/" class="dropdown-item">GIỎ HÀNG</a>
                                    <a href="/" class="dropdown-item">LIÊN HỆ</a>
                                    <a href="/" class="dropdown-item">LOGIN</a>
                                </div>
                            </div>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">

                            <a href="" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-primary"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">0</span>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid d-flex">


        <section id="selling-product" class="section flex-fill" style="word-wrap: break-word">
            <div class="text-center">
                <h3 itemprop="name" class="display-7 text-uppercase" style="font-weight: bold;">
                    <%= tieude %>
                </h3>
            </div>
            <div class="container mb-4 pb-4">
                <div>
                    <% content.splice(0.5).forEach((item) => { %>
                        <div class="mb-4">
                            <h6 itemprop="name" class="display-7 text-uppercase" style="font-weight: bold;">
                                <%= item.tieude %>
                            </h6>
                            <p style="color: black">
                                <%- item.content.replace(/\\n/g, "<br>") %>
                            </p>
                            <% if (item.img) { %>
                                <div class="product-preview mb-3 d-flex justify-content-center">
                                    <img src="<%= item.img %>" class="sanpham w-50 h-50" alt="product image">

                                </div>
                                <% } %>
                        </div>
                        <% }); %>
                </div>
            </div>
            <div class="text-center">
                <a class="btn tn-medium btn-danger text-center mb-3" href="/">Mua Iphone Chính Hãng Tại Gia Huy Mobile</a>

            </div>
        </section>

    </div>

    <div class="container-fluid py-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-1">Blog</span></h2>
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel vendor-carousel">
                    <% listBl.forEach((item)=> { %>
                        <div class="bg-light p-4" style="height: 300px;">
                            <img src="<%= item.img_blog %>" alt="">
                            <div class="text-center py-4 overflow-hidden ">
                                <a class="h6 text-decoration-none text-truncate " href="/contentBlog/<%= encodeURIComponent(item.tieude_blog).replace(/%20/g, '-')%>" style=" word-wrap: break-word;
                                white-space: normal;
                                max-width: 100%; /* hoặc giá trị khác phù hợp */;">
                                    <%= item.tieude_blog %>
                                </a>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>
    <!-- Products End -->


    <%- include('footer') %>


        <!-- Back to Top -->
        <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="http://localhost:3000/lib/easing/easing.min.js"></script>
        <script src="http://localhost:3000/lib/owlcarousel/owl.carousel.min.js"></script>

        <!-- Contact Javascript File -->
        <script src="http://localhost:3000/mail/jqBootstrapValidation.min.js"></script>
        <script src="http://localhost:3000/mail/contact.js"></script>

        <!-- Template Javascript -->
        <script src="http://localhost:3000/js/main.js"></script>
</body>

</html>